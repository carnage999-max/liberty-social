{
  "expo": {
    "name": "Liberty Social",
    "slug": "liberty-social",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1d3a93"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.libertysocial.app",
      "associatedDomains": [
        "webcredentials:mylibertysocial.com"
      ],
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload images and videos.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save images to your photo library.",
        "NSCameraUsageDescription": "This app needs access to your camera to take photos and videos.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record videos with audio.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B3D91"
      },
      "softwareKeyboardLayoutMode": "resize",
      "package": "com.libertysocial.app",
      "versionCode": 4,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "liberty-social",
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload images and videos.",
          "cameraPermission": "The app needs access to your camera to take photos and videos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#0B3D91",
          "sounds": []
        }
      ],
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "compileSdkVersion": 35,
            "ndkVersion": "27.3.13750724"
          }
        }
      ]
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#0B3D91"
    },
    "extra": {
      "eas": {
        "projectId": "af063308-b482-4d48-8149-c1cef1a1dd13"
      }
    }
  }
}
